@article{noriega_manipulating_2015,
	title = {Manipulating {Excited}-{State} {Dynamics} of {Individual} {Light}-{Harvesting} {Chromophores} through {Restricted} {Motions} in a {Hydrated} {Nanoscale} {Protein} {Cavity}},
