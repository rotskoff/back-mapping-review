@article{widmer-cooper_ligand-mediated_2016,
	title = {Ligand-{Mediated} {Interactions} between {Nanoscale} {Surfaces} {Depend} {Sensitively} and {Nonlinearly} on {Temperature}, {Facet} {Dimensions}, and {Ligand} {Coverage}},
