@article{girelli_microscopic_2021,
	title = {Microscopic {Dynamics} of {Liquid}-{Liquid} {Phase} {Separation} and {Domain} {Coarsening} in a {Protein} {Solution} {Revealed} by {X}-{Ray} {Photon} {Correlation} {Spectroscopy}},
