@misc{van_vu_thermodynamic_2022,
	title = {Thermodynamic {Unification} of {Optimal} {Transport}: {Thermodynamic} {Uncertainty} {Relation}, {Minimum} {Dissipation}, and {Thermodynamic} {Speed} {Limits}},
