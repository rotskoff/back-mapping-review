@article{jung_ab_2017,
	title = {Ab {Initio} {Ligand}-{Field} {Theory} {Analysis} and {Covalency} {Trends} in {Actinide} and {Lanthanide} {Free} {Ions} and {Octahedral} {Complexes}},
	volume = {56},
